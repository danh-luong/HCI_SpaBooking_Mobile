<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/service_card_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_background"
        android:clickable="true"
        android:onClick="clickToShowDetail"
        android:padding="0.8dp">

        <ImageView
            android:id="@+id/imageService"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/pager_Slideshow"
            android:background="@drawable/service_card_list_image_corner"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ser_cutting_hair_girl"/>

        <TextView
            android:id="@+id/txtNameService"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageService"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Cutting Girl Hair"
            android:textAlignment="center"
            android:textColor="#FF84AD"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtPriceService"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameService"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:text="$200"
            android:textAlignment="center"
            android:textColor="@color/service_item_blue_color"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtPriceAfterPromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPriceService"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:text=""
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="#F44336"
            android:textSize="12dp" />
    </RelativeLayout>

</RelativeLayout>
