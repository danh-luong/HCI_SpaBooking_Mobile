<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:padding="5dp"
        android:clickable="true"
        android:onClick="clickToShowDetail">

        <ImageView
            android:id="@+id/imageService"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@+id/pager_Slideshow"
            android:layout_margin="0dp"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ser_cutting_hair_girl" />

        <TextView
            android:id="@+id/txtNameService"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Cutting Girl Hair"
            android:textAlignment="center"
            android:textColor="#03BCF4"
            android:textSize="18dp"
            android:layout_below="@+id/imageService"/>
        <TextView
            android:id="@+id/txtPriceService"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:text="$200"
            android:textAlignment="center"
            android:textColor="@color/service_item_blue_color"
            android:textSize="14dp"
            android:layout_below="@+id/txtNameService"/>
        <TextView
            android:id="@+id/txtPriceAfterPromotion"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/philosopher_bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="16dp"
            android:layout_below="@+id/txtPriceService"/>
    </RelativeLayout>

</RelativeLayout>
