<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScheduleFragment"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calviewSchedule"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:maxDate="03/28/2020"
            android:minDate="03/23/2020"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch đặt"
            android:textStyle="bold"
            android:fontFamily="@font/philosopher_bold"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time_chooser_holder"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/lora"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:hint="Lưu ý của bạn"
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>
