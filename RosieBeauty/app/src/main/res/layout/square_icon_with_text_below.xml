<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:maxWidth="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_item_background">

        <ImageView
            android:id="@+id/square_icon_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/imageview_home"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@drawable/makeup" />

        <TextView
            android:id="@+id/square_icon_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/square_icon_image"
            android:padding="5dp"
            android:text="Facial Treatment"
            android:fontFamily="@font/philosopher_bold"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="18dp" />
    </RelativeLayout>


</LinearLayout>
